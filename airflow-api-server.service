[Unit]
Description=Airflow API Server
After=network.target

[Service]
Environment=AIRFLOW_HOME=/var/www/apache-airflow
Environment=AIRFLOW__CORE__DAGS_FOLDER=/var/www/apache-airflow/dags
# ExecStart=/var/www/apache-airflow/venv/bin/airflow api-server --port 8080
ExecStart=/bin/bash -c 'source /var/www/apache-airflow/venv/bin/activate && airflow api-server --port 8080'
Restart=always
User=root

[Install]
WantedBy=multi-user.target
